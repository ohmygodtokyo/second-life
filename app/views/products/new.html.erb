<div class="container mt-5">
  <div class="mb-5">
    <%= link_to " Back", products_path, class: "btn btn-dark fa-solid fa-arrow-left" %>
  </div>

  <%= simple_form_for(@product) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :image, as: :file %>
    <%= f.submit "Add New Product", class: "btn btn-dark" %>
  <% end %>
</div>
