<div class="navbar">
  <%- if user_signed_in? %>
    <h1 class="brand">2ndLife</h1>
  <%- else %>
    <%= link_to "2ndLife", root_path, class: "brand" %>
  <% end %>
  <ul class="nav-menu">
    <%- if user_signed_in? %>
      <div class="btn-group dropstart">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Profile
        </button>
        <ul class="dropdown-menu dropdown-menu-dark">
          <li><%= link_to "Add New Products", new_product_path, class: "dropdown-item" %></li>
          <li><%= link_to "My Bookings", bookings_path(@bookings), class: "dropdown-item" %></li>
          <li><%= link_to "Update profile", edit_user_registration_path, class: "dropdown-item" %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %></li>
        </ul>
      </div>
    <%- else %>
      <li><%= link_to "Login", new_user_session_path %></li>
      <li><%= link_to "Sign up", new_user_registration_path %></li>
    <% end %>
  </ul>
</div>
