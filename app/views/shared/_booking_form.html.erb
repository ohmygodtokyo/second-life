<div class="mt-3 row justify-content-start g-2 align-items-center">
  <h5><em>Book this item now!</em></h5>
  <div class="row col-xxl-4 col-lg-4 col-md-5 col-5 d-grid">
    <%= simple_form_for [@product, @booking], html: { data: { controller: "datepicker" } } do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :start_date, as: :string, placeholder: "  YYYY-MM-DD", input_html: { data: { target: "datepicker.start_date" } } %>
        <%= f.input :end_date, as: :string, placeholder: "  YYYY-MM-DD", input_html: { data: { target: "datepicker.end_date" } } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Book Product", class: "btn btn-dark btn-lg" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4 col-4" style="width: 70%; height: 225px; backdrop-filter: blur(10px); background-color: rgba(255, 255, 255, 0.8); border-radius: 10px;" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
