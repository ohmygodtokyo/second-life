<div class="container mt-3">
  <h2 class="text-center">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "signup-form" }) do |f| %>
    <div class="form-inputs" >
      <div class="form-check text-start my-3">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, class: "form-control" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, class: "form-control" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions">
        <div class="btn btn-dark">
          <%= f.button :submit, "Log in" %>
        </div>
    </div>

    <div class="form-check text-start my-3">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
