<div class="mt-3 row justify-content-start g-2 align-items-center">
  <div class="col-xxl-4 col-lg-4 col-md-5 col-5 d-grid">
    <h5><em>Book this item now!</em></h5>
    <%= simple_form_for ([product, @booking]) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :start_date, as: :string, placeholder: "select start date", input_html: { data: { controller: "datepicker" } } %>
        <%= f.input :end_date, as: :string, placeholder: "select end date", input_html: { data: { controller: "datepicker" } } %>
        <!-- #as: :date_picker -->
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Book Product", class: "btn btn-dark" %>
      </div>
    <% end %>
  </div>
</div>
